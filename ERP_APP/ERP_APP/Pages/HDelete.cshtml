@page
@model ERP_APP.Pages.HDeleteModel

@{
    ViewData["Title"] = "HDelete";
    Layout = "~/Pages/Shared/_LayoutWelcome.cshtml";
}


    <h3>Silmek istediğinize emin misiniz?</h3>
    <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <h7> Çalışan ID </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.HResourceId)
                </dd>
                <dt class="col-sm-2">
                    <h7> Ad </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.WorkerName)
                </dd>
                <dt class="col-sm-2">
                    <h7> Soyad </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.WorkerSurname)
                </dd>
                <dt class="col-sm-2">
                    <h7> İD </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.WorkerId)
                </dd>

                <dt class="col-sm-2">
                    <h7> Sertifikalar </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.WorkerSertificate)
                </dd>
                <dt class="col-sm-2">
                    <h7> Performans Notu </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.WorkPerformance)
                </dd>
                <dt class="col-sm-2">
                    <h7> Not </h7>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TblHumanR.Remarks)
                </dd>
            </dl>
        
            <form method="post">
                <a asp-page="HDisplay" class="btn btn-secondary btn-icon-split">

                    <span class="text">Listeye Dön</span>

                </a>
                <input type="hidden" asp-for="TblHumanR.HResourceId" />
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                
            </form>
    </div>
