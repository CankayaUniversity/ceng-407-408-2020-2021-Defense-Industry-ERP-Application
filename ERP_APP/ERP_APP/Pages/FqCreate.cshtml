@page
@model ERP_APP.Pages.FqCreateModel

@{
    ViewData["Title"] = "FqCreate";
    Layout = "~/Pages/Shared/_LayoutWelcome.cshtml";
}

<h1>Parça Ekle</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <h9> Ürün ID </h9>
                  

                    @Html.DisplayFor(model => model.TblRecordProducts.ProductId)
                    @Html.DisplayFor(model => model.Fq.ProductId)
                    <input type="hidden" name="productID" asp-for="TblRecordProducts.ProductId" class="form-control" />

                    <span asp-validation-for="Fq.ProductId" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <h9> Parça Numarası </h9>
                    <input asp-for="Fq.PartNo" class="form-control" />
                    <span asp-validation-for="Fq.PartNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> NSN </h9>
                    <input asp-for="Fq.Nsn" class="form-control" />
                    <span asp-validation-for="Fq.Nsn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> Ürün Sayısı </h9>
                    <input asp-for="Fq.PartPiece" class="form-control" />
                    <span asp-validation-for="Fq.PartPiece" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> Eksik Ürün Sayısı</h9>
                    <input asp-for="Fq.PartRemainPiece" class="form-control" />
                    <span asp-validation-for="Fq.PartRemainPiece" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> Adet/Metre </h9>
                    <input asp-for="Fq.PartPieceType" class="form-control" />
                    <span asp-validation-for="Fq.PartPieceType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> Lot Batch Numarası </h9>
                    <input asp-for="Fq.LotBatchNo" class="form-control" />
                    <span asp-validation-for="Fq.LotBatchNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h9> Not </h9>
                    <input asp-for="Fq.Remark" class="form-control" />
                    <span asp-validation-for="Fq.Remark" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a asp-page="RpDisplay" class="btn btn-secondary btn-icon-split">

                        <span class="text">Listeye Dön</span>

                    </a>
                    <input type="submit" value="Oluştur" class="btn btn-primary" />

                </div>
            </form>
        </div>
    </div>

   

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
